# Disable directory listings
Options -Indexes

# Redirect www to non-www
RewriteEngine On
RewriteBase /
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# 404 page
ErrorDocument 404 /404/

# Browser cache
ExpiresActive On
ExpiresDefault "access plus 6 hours"

